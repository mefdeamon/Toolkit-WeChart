<Window x:Class="WindChart.ApplyDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindChart.ApplyDemo"
        mc:Ignorable="d"
         WindowStartupLocation="CenterScreen"
        Title="Wind Chart Apply 1.0" Height="600" Width="1100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

            <Image Opacity="0.8" VerticalAlignment="Bottom" Margin="10" Source="/wantcola2.ico"  Width="90" Height="90"
                        Stretch="Uniform"
                        />
        
        <DockPanel Margin="10">
            <StackPanel Width="100">

                <RadioButton IsChecked="True" Tag="/Pages/GramPage.xaml" Content="坐标系" Margin="0 5 5 0" Click="NaviClick"/>
                <RadioButton Tag="/Pages/LinegramPage.xaml" Content="单线图" Margin="0 5 5 0" Click="NaviClick"/>
            </StackPanel>
        </DockPanel>


        <Frame Grid.Column="1" x:Name="frame" NavigationUIVisibility="Hidden" Source="/Pages/GramPage.xaml" />


    </Grid>
</Window>
